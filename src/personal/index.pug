extends base

mixin social(icon, url)
    a(href=url target="_blank")
        span.iconify.mdc-card__action--icon.social-button(data-icon=icon data-height="32px")

mixin project(title, subtitle, url, thumbnail, description, backgroundMode)
    - backgroundMode = backgroundMode || 'cover'
    .project.mdc-card.mdc-card--outlined
        .mdc-card__media.mdc-card__media--16-9(style="background-image: url(" + thumbnail + "); background-size:" + backgroundMode)
        .project-content
            .project-primary
                h1.mdc-typography.mdc-typography--headline6=title
                h2.mdc-typography.mdc-typography--subtitle1.mdc-theme--text-secondary-on-background=subtitle
            if description != null
            .mdc-typography.mdc-typography--body1.mdc-theme--on-surface=description
            if block
                block
        if url !== ''
            .mdc-card__actions
                .mdc-card__action-buttons
                    a(href=url target="_blank")
                        button.mdc-button.mdc-card__action.mdc-card__action--button
                            .mdc-button__ripple
                            span.mdc-button__label View


mixin article-card(article, cardExtra, textExtra, articleExtra)
    .article-card.mdc-layout-grid__cell.mdc-layout-grid__cell--span-1.mdc-card(class=cardExtra)
        div.full-height(class=articleExtra)
            .small-padding.fill
                h1.mdc-typography--headline6(class=textExtra)=article.title
                h2.mdc-typography--subtitle1(class=textExtra)=article.subtitle
            if article.thumbnail
                .mdc-card__media.mdc-card__media--16-9
                    .mdc-card__media-content.article-card--thumbnail(style=`background-image: url('${article.thumbnail}');`)


mixin article-card--available(article)
    a(href="/")
        +article-card(article, "mdc-elevation--z5", "", "mdc-card__primary-action")

mixin article-card--unavailable(article)
    +article-card(article, "article-card--wip mdc-card--outlined", "article-card--disabled", "article-card__wip")

block content
    -
        articles = htmlWebpackPlugin.options.articles
    #splash
        #splash_bg
            #headline
                h1.mdc-typography--overline.mdc-theme--on-primary  Realtime dynamic lighting on <i>The Unnecessary Engine</i>
    #articles
        h1.mdc-typography--headline3 Articles
        -
            available = articles.filter(value => !value.isWorkInProgress());
            unavailable = articles.filter(value => value.isWorkInProgress());
        h2.mdc-typography--headline5 Read now
        .mdc-layout-grid
            .mdc-layout-grid__inner
                each a in available
                    +article-card--available(a)
        h2.mdc-typography--headline5 Available soon
        .mdc-layout-grid
            .mdc-layout-grid__inner
                each a in unavailable
                    +article-card--unavailable(a)
    #website-content
